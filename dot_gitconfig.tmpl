[user]
	email = vitor@vitorpy.com
	name = Vitor Py
{{- if eq .chezmoi.os "darwin" }}
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAILPTg2brF8gVoxI+uuHIzaPYJF3MCUNsACYBaQ+pe9/a
{{- else }}
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAICCHiLKhovfixpOHPCnLzOsdRIUad248KhnBRA1ETUEd
{{- end }}
[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowedSigners
[commit]
	gpgsign = true
[alias]
	logs = log --show-signature
[init]
	defaultBranch = main
[core]
	excludesFile = ~/.gitignore
[push]
	autoSetupRemote = true
[core]
{{- if eq .chezmoi.os "darwin" }}
  sshCommand = ssh -i ~/.ssh/id_ed25519 -F /dev/null -o 'IdentitiesOnly yes'
{{- else }}
  sshCommand = ssh -i ~/.ssh/vitorpy.pub -F /dev/null -o 'IdentitiesOnly yes'
{{- end }}
[includeIf "gitdir:~/poker/"]
    path = ~/.gitconfig-tito
[diff "lockb"]
	textconv = bun
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[credential "https://github.com"]
	helper =
{{- if eq .chezmoi.os "darwin" }}
	helper = !/opt/homebrew/bin/gh auth git-credential
{{- else }}
	helper = !/usr/bin/gh auth git-credential
{{- end }}
[credential "https://gist.github.com"]
	helper =
{{- if eq .chezmoi.os "darwin" }}
	helper = !/opt/homebrew/bin/gh auth git-credential
{{- else }}
	helper = !/usr/bin/gh auth git-credential
{{- end }}
