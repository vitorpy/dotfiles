# Mako notification daemon configuration - Zenburn theme

# Positioning
anchor=top-right
margin=20
padding=15

# Appearance
width=350
height=150
border-size=2
border-radius=10

# Colors (Zenburn)
background-color=#3f3f3f
text-color=#dcdccc
border-color=#8faf9f

# Progress bar
progress-color=over #8faf9f

# Font
font=Noto Sans 11

# Timeout (milliseconds)
default-timeout=5000
ignore-timeout=0

# Icons
icons=1
max-icon-size=48
icon-path=/usr/share/icons/Yaru

# Grouping
group-by=app-name

# Do Not Disturb mode
[mode=do-not-disturb]
invisible=1

# Urgency overrides
[urgency=low]
border-color=#7f9f7f

[urgency=critical]
border-color=#cc9393
